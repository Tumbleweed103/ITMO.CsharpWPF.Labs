<Window x:Class="Ex04_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex04_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox Name="richTextBox" HorizontalAlignment="Left" Height="385" Margin="0,35,-0.4,0" VerticalAlignment="Top" Width="794">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ToolBar HorizontalAlignment="Left" Height="35" Margin="0,0,-0.4,0" VerticalAlignment="Top" Width="794">
            <Button Click="Button_Click">Bold</Button>
            <Button Height="21" Margin="0,4,0,5.4" Click="Button_Click_1">Italic</Button>
            <Slider Name="Slider" Minimum="2" Maximum="72" Width="104" Margin="0,5,0,5.4" ValueChanged="Slider_ValueChanged"></Slider>
            <ComboBox Name="comboBox" Width="75" Margin="0,5,0,5.4" SelectionChanged="comboBox_SelectionChanged"></ComboBox>
        </ToolBar>
    </Grid>
</Window>
